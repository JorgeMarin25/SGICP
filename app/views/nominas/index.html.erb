<h1>Listing nominas</h1>

<%= form_tag nominas_path, :method => 'get' do %> 
<% content_tag :label do %> 
Buscar por: 
<%= text_field_tag :search, params[:search] %> 
<%= submit_tag "Buscar", :empleado_id => nil %> 
<% end %> 
<% end %> 

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Salario basico</th>
      <th>Horas extras</th>
      <th>Recargos diurnos</th>
      <th>Recargos nocturnos</th>
      <th>Dominicales</th>
      <th>Festivos</th>
      <th>Comisiones</th>
      <th>Dias no trabajados</th>
      <th>Horas no trabajadas</th>
      <th>Empleado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nominas.each do |nomina| %>
      <tr>
        <td><%= nomina.salariobasico %></td>
        <td><%= nomina.horasextras %></td>
        <td><%= nomina.recargosdiurnos %></td>
        <td><%= nomina.recargosnocturnos %></td>
        <td><%= nomina.dominicales %></td>
        <td><%= nomina.festivos %></td>
        <td><%= nomina.comisiones %></td>
        <td><%= nomina.diasnotrabajados %></td>
        <td><%= nomina.horasnotrabajadas %></td>
         <td><%= nomina.empleado.nombre %></td>
        <td><%= link_to 'Show', nomina %></td>
        <td><%= link_to 'Edit', edit_nomina_path(nomina) %></td>
        <td><%= link_to 'Destroy', nomina, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Nomina', new_nomina_path %>

<%= will_paginate @nominas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Nominas: <%= @nominas.count %> 
