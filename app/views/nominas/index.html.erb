<center><h1>Listado de Nomina</h1></center>

<%= form_tag nominas_path, :method => 'get' do %> 
<% content_tag :label do %> 
Buscar por: 
<%= text_field_tag :search, params[:search] %> 
<%= submit_tag "Buscar", :empleado_id => nil %> 
<% end %> 
<% end %> 

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Empleado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @nominas.each do |nomina| %>
      <tr>
        <td><%= nomina.empleado.nombre %></td>
        <td><%= link_to 'Ver', nomina %></td>
        <td><%= link_to 'Editar', edit_nomina_path(nomina) %></td>
        <td><%= link_to 'Eliminar', nomina, method: :delete, data: { confirm: 'Esta Seguro, Esto No Se Puede Reponer?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Nomina', new_nomina_path %>

<%= will_paginate @nominas, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Nominas: <%= @nominas.count %> 
