<center><h1>Empleados</h1></center>

<%= form_tag empleados_path, :method => 'get' do %>
<% content_tag :label do %>
Buscar por nombre:
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Buscar", :nombre => nil %>
<% end %>
<% end %>


<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Documento</th>
      <th>Cargo</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody> 
    <%= render @empleados %> 

  </tbody> 
</table>

<br>


<%= link_to 'Nuevo Empleado', new_empleado_path, remote: true %> 
<br>

<%= will_paginate @empleados, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>

