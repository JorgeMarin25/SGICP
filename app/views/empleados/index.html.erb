<h1>Listing empleados</h1>

<%= form_tag empleados_path, :method => 'get' do %>
<% content_tag :label do %>
Buscar:
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Buscar", :nombre => nil %>
<% end %>
<% end %>


<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Dococumento</th>
      <th>Estado</th>
      <th>Direccion</th>
      <th>Barrio</th>
      <th>Ciudad</th>
      <th>Telefono</th>
      <th>Celular</th>
      <th>Correo</th>
      <th>Genero</th>
      <th>Fecha inicio</th>
      <th>Fecha final</th>
      <th>Cargo</th>
      <th>Referencia</th>
      <th>Telefono referencia</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody> 
    <%= render @empleados %> 
  </tbody> 
</table>

<br>

<%= link_to 'Nuevo', new_empleado_path, remote: true %> 

<%= will_paginate @empleados, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
empleados: <%= @empleados.count %>