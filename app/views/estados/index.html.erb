<h1>Estados Civiles</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estados.each do |estado| %>
      <tr>
        <td><%= estado.name %></td>
        <td><%= link_to 'Ver', estado %></td>
        <td><%= link_to 'Editar', edit_estado_path(estado) %></td>
        <td><%= link_to 'Eliminar', estado, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo estado Civil', new_estado_path %>
