<h1>Estudios</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Fecha</th>
      <th>Lugar</th>
      <th>Empleado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estudios.each do |estudio| %>
      <tr>
        <td><%= estudio.nombre %></td>
        <td><%= estudio.descripcion %></td>
        <td><%= estudio.fecha %></td>
        <td><%= estudio.lugar %></td>
        <td><%= estudio.empleado %></td>
        <td><%= link_to 'SVer', estudio %></td>
        <td><%= link_to 'Editar', edit_estudio_path(estudio) %></td>
        <td><%= link_to 'Eliminar', estudio, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

