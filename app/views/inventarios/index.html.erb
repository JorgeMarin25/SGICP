<h1>Listing inventarios</h1>


<%= form_tag inventarios_path, :method => 'get' do %> 
<% content_tag :label do %> 
Search term: 
<%= text_field_tag :search, params[:search] %> 
<%= submit_tag "Buscar", :productos => nil %> 
<% end %> 
<% end %> 

<table>
  <thead>
    <tr>
      <th>Productos</th>
      <th>Cantidad</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventarios.each do |inventario| %>
      <tr>
        <td><%= inventario.productos %></td>
        <td><%= inventario.cantidad %></td>
        <td><%= link_to 'Show', inventario %></td>
        <td><%= link_to 'Edit', edit_inventario_path(inventario) %></td>
        <td><%= link_to 'Destroy', inventario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Inventario', new_inventario_path %>

<%= will_paginate @inventarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Inventarios: <%= @inventarios.count %> 