<h1>Lista de  inventarios</h1>


<%= form_tag inventarios_path, :method => 'get' do %> 
<% content_tag :label do %> 
Buscar por producto: 
<%= text_field_tag :search, params[:search] %> 
<%= submit_tag "Buscar", :productos => nil %> 
<% end %> 
<% end %> 

<table class="table table-condensed">
  <thead>
    <tr>
      <th>Productos</th>
      <th>Cantidad</th>
      <th>valor unitario</th>
      <th>Precio</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inventarios.each do |inventario| %>
      <tr>
        <td><%= inventario.productos %></td>
        <td><%= inventario.cantidad %></td>
        <td><%= inventario.valor %></td>
        <td><%= suma(inventario.cantidad, inventario.valor) %></td>
        <td><%= link_to 'Ver', inventario %></td>
        <td><%= link_to 'Editar', edit_inventario_path(inventario) %></td>
        <td><%= link_to 'Eliminar', inventario, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nuevo Inventario', new_inventario_path %>

<%= will_paginate @inventarios, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Inventarios: <%= @inventarios.count %> 