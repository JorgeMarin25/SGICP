<center><h1 class="alert alert-info">Cotizaciones de: <%= @cliente.nombre %></h1></center>
	<table class="table table-condensed">
		<thead>
			<tr>
			<th class="warning">Cliente</th>
			<th class="success">Empresa</th>
			<th class="danger">Producto</th>
			<th class="info">Estado</th>
			<th colspan="3"></th>
			</tr>
		</thead>
		<tbody>
			<% @cotizacions.each do |cotizacion| %>
			<tr>
			<td class="warning"><%= cotizacion.cliente.nombre %></td>
			<td class="success"><%= cotizacion.cliente.empresa %></td>
			<td class="danger"><%= cotizacion.producto %></td>
			<td class="info"><%= cotizacion.estado %></td>
			
			<td><%= link_to 'Ver', cliente_cotizacion_path(@cliente,cotizacion), class: "btn btn-primary btn-xs" %></td>
			<td><%= link_to 'Editar', edit_cliente_cotizacion_path(@cliente,cotizacion), class: "btn btn-primary btn-xs" %></td>
			<td><%= link_to 'Eliminar', cliente_cotizacion_path(@cliente,cotizacion) , method: :delete, data: { confirm: 'Esta seguro?' }, class: "btn btn-primary btn-xs" %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
