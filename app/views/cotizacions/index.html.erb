<h1>Listing cotizacions</h1>
<table class="table table-condensed">
<%= form_tag cotizacions_path, :method => 'get' do %> 
<% content_tag :label do %> 
Buscar por: 
<%= text_field_tag :search, params[:search] %> 
<%= submit_tag "Buscar", :id => nil %> 
<% end %> 
<% end %>


<table class="table table-condensed">
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Telefono</th>
      <th>Empresa</th>
      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cotizacions.each do |cotizacion| %>
      <tr>
        <td><%= cotizacion.cliente %></td>
        <td><%= cotizacion.telefono %></td>
        <td><%= cotizacion.empresa %></td>
        <td><%= link_to 'Ver', cotizacion %></td>
        <td><%= link_to 'Editar', edit_cotizacion_path(cotizacion) %></td>
        <td><%= link_to 'Eliminar', cotizacion, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva cotizacion', new_cotizacion_path %>

<%= will_paginate @cotizacions, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Cotizaciones: <%= @cotizacions.count %>
