<%= form_for [@cliente,@cotizacion] do |f| %>
  <% if @cotizacion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cotizacion.errors.count, "error") %> prohibited this cotizacion from being saved:</h2>

      <ul>
      <% @cotizacion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :producto %><br>
    <%= f.text_field :producto %>
  </div>
  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion %>
  </div>
  <div class="field">
    <%= f.label :cantidad %><br>
    <%= f.text_field :cantidad %>
  </div>
  <div class="field">
    <%= f.label :precio %><br>
    <%= f.number_field :precio %>
  </div>
  <div class="field">
    <%= f.label :iva %><br>
    <%= f.number_field :iva %>
  </div>
  <div class="field">
    <%= f.label :subtotal %><br>
    <%= f.number_field :subtotal %>
  </div>
  <div class="field">
    <%= f.label :total %><br>
    <%= f.number_field :total %>
  </div>
  <div class="field"> 
  Aprobado: <%= f.radio_button(:estado, true) %> 
  No aprobado: <%= f.radio_button(:estado, false) %> 
</div> 
  <div class="actions">
    <%= f.submit %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")), 
    cliente_cotizacions_path(@cliente), :class => 'btn' %> 
  </div>


<% end %>
