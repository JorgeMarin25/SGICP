
<center><h1 class="alert alert-info">Listado de cotizaciones</h1></center>





<table class="table table-condensed">
  <thead>
    <tr>
      <th class="warning">ID</th>
      <th class="success">Cliente</th>
      <th class="danger">Empresa</th>
      <th class="info">Producto</th>
      <th class="warning">Estado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cotizacions.each do |cotizacion| %>
      <tr>
        <td class="warning"><%= cotizacion.id %></td>
        <td class="success"><%= cotizacion.cliente.nombre %></td>
        <td class="danger"><%= cotizacion.cliente.empresa %></td>
        <td class="info"><%= cotizacion.producto %></td>
        <td class="warning"><%= cotizacion.estado %></td>
        <td><%= link_to 'Ver', cliente_cotizacion_path(cotizacion.cliente,cotizacion), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Editar', edit_cliente_cotizacion_path(cotizacion.cliente,cotizacion), class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Eliminar', cliente_cotizacion_path(cotizacion.cliente,cotizacion) , method: :delete, data: { confirm: 'Esta seguro?' }, class: "btn btn-warning btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<%= will_paginate @cotizacions, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Cotizaciones: <%= @cotizacions.count %>
