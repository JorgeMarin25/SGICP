<h1>Facturaciones</h1>

<%= form_tag clientes_path, :method => 'get' do %> 
  <% content_tag :label do %> 
    Buscar por cliente: 
    <%= text_field_tag :search, params[:search] %> 
    <%= submit_tag "Buscar", :id => nil %> 
  <% end %> 
<% end %> 
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Fecha</th>
      <th>Fecha vencimiento</th>
      <th>Cotizacion</th>
      <th>Cliente</th>
      <th>Telefono</th>
      <th>Empresa</th>
      <th>Nit</th>
      <th>Producto</th>
      <th>Descripcion</th>
      <th>Cantidad</th>
      <th>Precio</th>
      <th>Iva</th>
      <th>Subtotal</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @facturacions.each do |facturacion| %>
      <tr>
        <td><%= facturacion.fecha %></td>
        <td><%= facturacion.fchven %></td>
        <td><%= facturacion.cotizacion_id %></td>
        <td><%= facturacion.cliente_id %></td>
        <td><%= facturacion.telefono %></td>
        <td><%= facturacion.empresa %></td>
        <td><%= facturacion.nit %></td>
        <td><%= facturacion.producto %></td>
        <td><%= facturacion.descripcion %></td>
        <td><%= facturacion.cantidad %></td>
        <td><%= facturacion.precio %></td>
        <td><%= facturacion.iva %></td>
        <td><%= facturacion.subtotal %></td>
        <td><%= link_to 'Ver', facturacion %></td>
        <td><%= link_to 'Editar', edit_facturacion_path(facturacion) %></td>
        <td><%= link_to 'Eliminar', facturacion, method: :delete, data: { confirm: 'Esta seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Facturacion', new_facturacion_path %>
<%= will_paginate @facturacions, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente 
&raquo;' %> 
<br> 
Facturas: <%= @facturacions.count %>