<h1>Listing facturacions</h1>

<table class="table table-condensed">
  <thead>
    <tr>
      <th class="warning">Fecha facturacion</th>
      <th class="success">Fecha vencimiento</th>
      <th class="danger">Cliente</th>
      <th class="warning">Cotizacion</th>
      <th  class="success">Estado</th>
      <th class="danger">Iva</th>
      <th class="warning">Total</th>
      <th colspan="3">Opciones</th>
    </tr>
  </thead>

  <tbody>
    <% @facturacions.each do |facturacion| %>
      <tr>
        <td class="warning"><%= facturacion.fecha_facturacion %></td>
        <td class="success"><%= facturacion.fecha_vencimiento %></td>
        <td class="danger"><%= facturacion.cliente %></td>
        <td class="warning"><%= facturacion.cotizacion %></td>
        <td class="success"><%= facturacion.estado %></td>
        <td class="danger"><%= facturacion.iva %></td>
        <td class="warning"><%= facturacion.total %></td>
        <td><%= link_to 'Ver', facturacion ,class: "btn btn-primary btn-xs"%></td>
        <td><%= link_to 'Editar', edit_facturacion_path(facturacion),class: "btn btn-primary btn-xs" %></td>
        <td><%= link_to 'Eliminar', facturacion, method: :delete, data: { confirm: 'Are you sure?' } ,class: "btn btn-primary btn-xs" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Facturacion', new_facturacion_path , class: "btn btn-primary btn-xs" %>
