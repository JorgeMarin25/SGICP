<%= form_for(@facturacion) do |f| %>
  <% if @facturacion.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@facturacion.errors.count, "error") %> prohibited this facturacion from being saved:</h2>

      <ul>
      <% @facturacion.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :fecha_facturacion %><br>
    <%= f.date_select :fecha_facturacion %>
  </div>
  <div class="field">
    <%= f.label :fecha_vencimiento %><br>
    <%= f.date_select :fecha_vencimiento %>
  </div>
  
<div class="field">
<%= f.collection_select :cliente_id, Cliente.all, :id, :nombre, class: "form-control", prompt: "Seleccione Cliente" %>
</div>
  
<div class="field">
<%= f.collection_select :cotizacion_id, Cotizacion.all, :id, :id, class: "form-control", prompt: "Seleccione cotizacion" %>
</div>
  <div class="field">
Activo: <%= f.radio_button(:estado, true) %>
Inactivo: <%= f.radio_button(:estado, false) %>
</div>

  <div class="field">
    <%= f.label :iva %><br>
    <%= f.number_field :iva %>
  </div>
  <div class="field">
    <%= f.label :total %><br>
    <%= f.number_field :total %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
