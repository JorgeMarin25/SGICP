<h1>Clientes</h1>

<%= form_tag clientes_path, :method => 'get' do %>
<% content_tag :label do %>
Search term:
<%= text_field_tag :search, params[:search] %>
<%= submit_tag "Buscar", :nombre=> nil %>
<% end %>
<% end %>

<table class="table table-condensed">
  <thead>
    <tr>
    <th colspan="3"></th>
      <th>Nombre</th>
      <th>Empresa</th>
      <th>Nit</th>
      <th>Direccion</th>
      <th>Ciudad</th>
      <th>Telefono</th>
      <th>Correo</th>
      
    </tr>
  </thead>

  <tbody>
    <%= render @clientes %>
     
  
  </tbody>
</table>

<br>

<%= link_to 'New Cliente', new_cliente_path %>

<%= will_paginate @clientes, :previous_label => '&laquo; Anterior', :next_label => 'Siguiente &raquo;' %>
<br>
Clientes: <%= @clientes.count %>
